@model MyClass.Model.Categories

@{
    ViewBag.Title = "Chi tiết thông tin loại hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="wrapper">
    <!-- Main Sidebar Container -->
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <!-- Default box -->
            <div class="card">
                <div class="card-header">
                    <div class="row">
                        <div class="col-md-6">
                            <strong class="text-danger">DANH MỤC LOẠI SẢN PHẨM</strong>
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="@Url.Action("Index", "Category")" class="btn-sm btn-info"><i class="fa fa-long-arrow-alt-left"></i> Quay lại</a>
                            <a href="@Url.Action("Edit","Category", new { id = Model.Id })" class="btn-sm btn-success"><i class="fa fa-edit"></i> Sửa</a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <tr>
                            <th>Id</th>
                            <th>@Html.DisplayNameFor(model => model.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Slug)</th>
                            <th>@Html.DisplayNameFor(model => model.ParentId)</th>
                            <th>@Html.DisplayNameFor(model => model.Order)</th>
                            <th>@Html.DisplayNameFor(model => model.MetaDesc)</th>
                            <th>@Html.DisplayNameFor(model => model.MetaKey)</th>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(model => model.Id)</td>
                            <td>@Html.DisplayFor(model => model.Name)</td>
                            <td>@Html.DisplayFor(model => model.Slug)</td>
                            <td>@Html.DisplayFor(model => model.ParentId)</td>
                            <td>@Html.DisplayFor(model => model.Order)</td>
                            <td>@Html.DisplayFor(model => model.MetaDesc)</td>
                            <td>@Html.DisplayFor(model => model.MetaKey)</td>
                        </tr>
                    </table>
                </div> <!-- /.card-footer-->
            </div><!-- /.card -->
        </section><!-- /.content -->
    </div> <!-- /.content-wrapper -->
</div><!-- ./wrapper -->
